@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@using FindJob.Localization
@inject IHtmlLocalizer<FindJobResource> L
@model FindJob.Web.Pages.Employers.Employer.CreateModalModel
@{
    Layout = null;
}
<form method="post" asp-page="/Employers/Employer/CreateModal">
    <abp-modal size="Default">
        <abp-modal-header>
            <abp-row>
                <abp-column size-md="_6">
                    <abp-modal-title style="font-weight:bold; text-transform:uppercase; font-size:20px">@L["CreateEmployer"]</abp-modal-title>
                </abp-column>
            </abp-row>
        </abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="UserDto.UserName"></abp-input>
            <abp-input asp-for="UserDto.Password"></abp-input>
            <abp-input asp-for="UserDto.Email"></abp-input>
            <abp-input asp-for="UserDto.PhoneNumber"></abp-input>
            <abp-input asp-for="ViewModel.CompanyName"></abp-input>
            <abp-input asp-for="ViewModel.Address"></abp-input>

        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>